<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Adventures" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Adventures</h1>
    <%= link_to "New adventure", new_adventure_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= turbo_stream_from @user %>
  <div id="adventures" class="min-w-full">
    <% @adventures.each do |adventure| %>
      <%= render adventure %>
      <p>
        <%= link_to "Show this adventure", adventure, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
